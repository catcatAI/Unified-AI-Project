# Angela AI Environment Configuration
# Copy this file to .env and update with your settings

# Application Settings
ANGELA_ENV=development
NODE_ENV=development
ANGELA_TESTING=true

# Backend Configuration
BACKEND_HOST=127.0.0.1
BACKEND_PORT=8000
BACKEND_URL=http://127.0.0.1:8000

# Security Keys (Generate these for production)
ANGELA_KEY_A=your_key_a_minimum_32_chars
ANGELA_KEY_B=your_key_b_minimum_32_chars  
ANGELA_KEY_C=your_key_c_minimum_32_chars

# Database Configuration
DATABASE_URL=sqlite:///./angela.db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Live2D Configuration
LIVE2D_MODEL_PATH=./resources/models/miara_pro_t03.model3.json
LIVE2D_SDK_CDN=https://cubism.live2d.com/sdk-web/cubismcore/live2dcubismcore.min.js

# Performance Settings
PERFORMANCE_MODE=auto
TARGET_FPS=60
ENABLE_HARDWARE_ACCELERATION=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/angela.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Feature Flags
ENABLE_VOICE_RECOGNITION=true
ENABLE_TTS=true
ENABLE_WEBSOCKET=true
ENABLE_MOBILE_BRIDGE=true

# External Services
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# Development Settings
DEBUG_MODE=true
HOT_RELOAD=true
ENABLE_CORS=true

# Testing Configuration
TEST_MODE=true
MOCK_EXTERNAL_APIS=true
TEST_DATA_PATH=./test_data