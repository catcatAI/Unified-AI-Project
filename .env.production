# Angela AI Production Environment
# Production configuration template

# Application Settings
ANGELA_ENV=production
NODE_ENV=production
ANGELA_TESTING=false

# Backend Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_URL=https://your-domain.com

# Security Keys (REPLACE WITH ACTUAL KEYS)
ANGELA_KEY_A=GENERATE_SECURE_32_CHAR_KEY_A
ANGELA_KEY_B=GENERATE_SECURE_32_CHAR_KEY_B  
ANGELA_KEY_C=GENERATE_SECURE_32_CHAR_KEY_C

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/angela_prod
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Live2D Configuration
LIVE2D_MODEL_PATH=./resources/models/miara_pro_t03.model3.json
LIVE2D_SDK_CDN=./libs/live2dcubismcore.min.js

# Performance Settings
PERFORMANCE_MODE=high
TARGET_FPS=60
ENABLE_HARDWARE_ACCELERATION=true

# Logging Configuration
LOG_LEVEL=warning
LOG_FILE=/var/log/angela/angela.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=10

# Feature Flags
ENABLE_VOICE_RECOGNITION=true
ENABLE_TTS=true
ENABLE_WEBSOCKET=true
ENABLE_MOBILE_BRIDGE=true

# External Services
OPENAI_API_KEY=sk-your-production-openai-key
GOOGLE_API_KEY=your-production-google-key

# Security Settings
SSL_CERT_PATH=/etc/ssl/certs/angela.crt
SSL_KEY_PATH=/etc/ssl/private/angela.key
JWT_SECRET=your-jwt-secret-here

# Development Settings
DEBUG_MODE=false
HOT_RELOAD=false
ENABLE_CORS=false

# Production Configuration
CLUSTER_MODE=true
WORKER_PROCESSES=4
MAX_CONNECTIONS=1000