{
  "name": "unified-ai-monorepo",
  "private": true,
  "scripts": {
    "install:all": "pnpm install; cd apps/backend; pip install -e .[dev]",
    "dev:dashboard": "pnpm --filter frontend-dashboard dev",
    "dev:backend": "pnpm --filter backend dev",
    "dev:desktop": "node scripts/port_manager.js kill-service DESKTOP_APP && pnpm --filter desktop-app start",
    "dev": "concurrently --kill-others-on-fail --raw --timeout 600000 \"pnpm dev:backend\" \"pnpm dev:dashboard\"",
    "dev:all": "node scripts/kill_port_3000.js && concurrently --kill-others-on-fail --raw --timeout 600000 \"pnpm dev:backend\" \"pnpm dev:dashboard\" \"pnpm dev:desktop\"",
    "test": "python -c \"import os; os.environ['TRANSFORMERS_NO_TF_IMPORT']='1'; import pytest; import sys; sys.exit(pytest.main(['apps/backend/tests', '--timeout=300']))\"",
    "test:backend": "pnpm --filter backend test",
    "test:frontend": "pnpm --filter frontend-dashboard test",
    "test:desktop": "pnpm --filter desktop-app test",
    "test:coverage": "pnpm -r test:coverage",
    "test:watch": "concurrently --kill-others-on-fail --timeout 300000 \"pnpm --filter backend test --watch\" \"pnpm --filter frontend-dashboard test --watch\"",
    "dev-test": "concurrently --kill-others-on-fail --raw \"pnpm dev\" \"pnpm test:watch\"",
    "build": "pnpm --filter '*' build",
    "clean": "pnpm -r clean; rimraf node_modules",
    "setup": "node scripts/setup.js",
    "health-check": "python scripts/health_check.py",
    "unified-ai": "unified-ai.bat",
    "port-info": "node scripts/port_manager.js info",
    "port-check": "node scripts/port_manager.js check",
    "port-kill-service": "node scripts/port_manager.js kill-service",
    "kill-port-3000": "node scripts/kill_port_3000.js"
  },
  "devDependencies": {
    "chokidar": "^4.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "fkill-cli": "^8.0.0",
    "rimraf": "^6.0.0"
  },
  "dependencies": {
    "dompurify": "^3.2.6",
    "electron-store": "^10.1.0",
    "ses": "^1.14.0"
  },
  "version": "1.0.0"
}