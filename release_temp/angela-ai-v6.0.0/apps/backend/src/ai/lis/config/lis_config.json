{
    "detection_threshold": 0.6,
    "problematic_keywords": [
        "hate",
        "harmful",
        "bias",
        "toxic",
        "offensive",
        "inferior",
        "superior"
    ],
    "detection_rules": {
        "hate_speech_pattern": "\b(hate|harm|toxic)\b",
        "bias_pattern": "\b(inferior|superior)\b.*\b(human|ai)\b",
        "personal_attack": "\b(idiot|stupid|fool)\b",
        "sensitive_topic_mention": "\b(politics|religion|sex)\b"
    }
}