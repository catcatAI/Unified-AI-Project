# 统一自动修复系统配置文件

{
  "enabled_modules": [
    "syntax_fix",
    "import_fix", 
    "dependency_fix",
    "git_fix",
    "environment_fix",
    "security_fix",
    "code_style_fix",
    "path_fix",
    "configuration_fix"
  ],
  "backup_enabled": true,
  "dry_run": false,
  "ai_assisted": true,
  "max_fix_attempts": 3,
  "parallel_fixing": true,
  "excluded_paths": [
    "node_modules",
    "__pycache__",
    ".git",
    "venv",
    ".venv",
    "backup",
    "unified_fix_backups",
    "dist",
    "build",
    ".pytest_cache"
  ],
  "custom_rules": {
    "python_version": "3.8+",
    "nodejs_version": "16+",
    "git_version": "2.20+",
    "max_file_size_mb": 100,
    "enforce_pep8": true,
    "security_checks": [
      "hardcoded_secrets",
      "sql_injection",
      "xss_vulnerabilities",
      "path_traversal"
    ]
  },
  "ai_enhancement": {
    "enabled": true,
    "learning_enabled": true,
    "pattern_recognition": true,
    "predictive_analysis": true,
    "confidence_threshold": 0.7
  },
  "logging": {
    "level": "INFO",
    "file_enabled": true,
    "console_enabled": true,
    "max_log_files": 10,
    "log_rotation": "daily"
  },
  "reporting": {
    "auto_save_reports": true,
    "report_format": "json",
    "include_diffs": true,
    "include_statistics": true,
    "max_report_age_days": 30
  }
}