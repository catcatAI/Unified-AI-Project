{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://unified-ai-project.com/schemas/HSP_CapabilityAdvertisement_v0.1.schema.json",
  "title": "HSP Capability Advertisement Payload",
  "description": "Schema for the payload of an HSP Capability Advertisement message.",
  "type": "object",
  "properties": {
    "capability_id": {
      "type": "string"
    },
    "ai_id": {
      "type": "string"
    },
    "agent_name": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "input_schema_uri": {
      "type": "string",
      "format": "uri"
    },
    "input_schema_example": {
      "type": "object"
    },
    "output_schema_uri": {
      "type": "string",
      "format": "uri"
