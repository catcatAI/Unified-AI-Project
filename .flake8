[flake8]
max-line-length = 100
max-complexity = 10
exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    build,
    dist,
    node_modules,
    .pytest_cache,
    migrations,
    .tox,
    .mypy_cache,
    .cache
ignore =
    E203,
    W503,
    E501,
    F401,
per-file-ignores =
    __init__.py:F401
    test_*.py:S101
    conftest.py:F401
# 启用特定插件
# 需要安装: flake8-bugbear, flake8-comprehensions, flake8-simplify
# extend-ignore =
#     B901  # return x in a generator
#     C400  # Unnecessary generator (rewrite as a set comprehension)